{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@/test/*": ["./test/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "vitest.config.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
